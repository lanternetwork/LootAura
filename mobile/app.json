{
  "expo": {
    "name": "LootAura",
    "slug": "LootAura",
    "scheme": "lootaura",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3A2268"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.lootaura.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3A2268"
      },
      "permissions": []
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lootaura.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "LootAura uses your location to show nearby yard sales."
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "<INSERT_EAS_PROJECT_ID>"
      }
    }
  }
}

